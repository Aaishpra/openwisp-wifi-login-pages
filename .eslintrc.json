{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"parser": "babel-eslint",
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"rules": {
		"array-bracket-spacing": [2, "never"],
		"semi": [2, "always"],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		]
	}
}
